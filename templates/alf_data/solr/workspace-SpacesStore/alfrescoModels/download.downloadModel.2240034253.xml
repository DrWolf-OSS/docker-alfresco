<?xml version="1.0" encoding="UTF-8"?>
<model xmlns="http://www.alfresco.org/model/dictionary/1.0" name="download:downloadModel">
    <description>Alfresco Download Model</description>
    <author>Alfresco</author>
    <published>2012-07-31</published>
    <version>1.0</version>
    <imports>
        <import uri="http://www.alfresco.org/model/dictionary/1.0" prefix="d"/>
        <import uri="http://www.alfresco.org/model/content/1.0" prefix="cm"/>
    </imports>
    <namespaces>
        <namespace uri="http://www.alfresco.org/model/download/1.0" prefix="download"/>
    </namespaces>
    <data-types/>
    <constraints/>
    <types>
        <type name="download:download">
            <parent>cm:content</parent>
            <archive>false</archive>
            <properties>
                <property name="download:recursive">
                    <type>d:boolean</type>
                    <mandatory>true</mandatory>
                    <default>true</default>
                    <index enabled="true"/>
                </property>
                <property name="download:status">
                    <type>d:text</type>
                    <mandatory>true</mandatory>
                    <default>PENDING</default>
                    <index enabled="true"/>
                    <constraints>
                        <constraint name="download:downloadModel_download_status_anon_0" type="LIST">
                            <parameter name="allowedValues">
                                <list>
                                    <value>PENDING</value>
                                    <value>IN_PROGRESS</value>
                                    <value>DONE</value>
                                    <value>MAX_CONTENT_SIZE_EXCEEDED</value>
                                    <value>CANCELLED</value>
                                </list>
                            </parameter>
                        </constraint>
                    </constraints>
                </property>
                <property name="download:sequenceNumber">
                    <type>d:int</type>
                    <mandatory>true</mandatory>
                    <default>0</default>
                    <index enabled="true"/>
                </property>
                <property name="download:done">
                    <type>d:long</type>
                    <mandatory>true</mandatory>
                    <default>0</default>
                    <index enabled="true"/>
                </property>
                <property name="download:total">
                    <type>d:long</type>
                    <mandatory>true</mandatory>
                    <default>0</default>
                    <index enabled="true"/>
                </property>
                <property name="download:filesAdded">
                    <type>d:long</type>
                    <mandatory>true</mandatory>
                    <default>0</default>
                    <index enabled="true"/>
                </property>
                <property name="download:totalFiles">
                    <type>d:long</type>
                    <mandatory>true</mandatory>
                    <default>0</default>
                    <index enabled="true"/>
                </property>
                <property name="download:cancelled">
                    <type>d:boolean</type>
                    <mandatory>true</mandatory>
                    <default>false</default>
                    <index enabled="true"/>
                </property>
            </properties>
            <associations>
                <association name="download:requestedNodes">
                    <source>
                        <mandatory>false</mandatory>
                        <many>true</many>
                    </source>
                    <target>
                        <class>cm:cmobject</class>
                        <mandatory enforced="false">false</mandatory>
                        <many>true</many>
                    </target>
                </association>
            </associations>
            <overrides/>
            <mandatory-aspects>
                <aspect>cm:auditable</aspect>
            </mandatory-aspects>
        </type>
    </types>
    <aspects/>
</model>