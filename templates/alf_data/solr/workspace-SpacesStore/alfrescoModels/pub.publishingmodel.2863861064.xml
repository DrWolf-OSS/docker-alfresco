                    <index enabled="true"/>
                </property>
                <property name="pub:channelType">
                    <title>Containing Channel Type</title>
                    <type>d:text</type>
                    <mandatory>false</mandatory>
                    <index enabled="true"/>
                </property>
            </properties>
            <associations/>
            <overrides/>
