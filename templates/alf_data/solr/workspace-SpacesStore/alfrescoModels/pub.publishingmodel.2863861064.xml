                <property name="pub:assetId">
                    <title>Published Asset Id</title>
                    <type>d:text</type>
                    <mandatory>false</mandatory>
                    <index enabled="true"/>
                </property>
                <property name="pub:assetUrl">
                    <title>Published Asset URL</title>
